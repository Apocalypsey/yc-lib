chdir

bindkey -k k2 screen # F2: new tab
bindkey -k k3 prev # F3: prev tab
bindkey -k k4 next # F4: next tab
bindkey -k k7 copy # F7: copy mode

hardstatus on
hardstatus alwayslastline
hardstatus string "%{= br}%{g}[%{G}$USER@%H%{g}]%{w}%1`%{g}[%=%{=kw}%{w}%-w%{Y}[%{W}%n-%t%{Y}]%{w}%+w%=%{g}][%l][%{w}%Y-%m-%d %{Y}%c%{g}]"

term xterm

screen -t root      0 sudo su -
screen -t dev       1
screen -t dev       2
screen -t dev       3
select 1

altscreen on
